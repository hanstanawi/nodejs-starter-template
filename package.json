{
  "name": "node-ts-starter-template",
  "version": "1.0.0",
  "description": "Node.js + TypeScript starter template",
  "engines": {
    "node": ">= 18.x"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "jest",
    "github-actions"
  ],
  "homepage": "https://github.com/hanstanawi/node-ts-starter-template",
  "bugs": {
    "url": "https://github.com/hanstanawi/node-ts-starter-template/issues",
    "email": "hans.tanawi@outlook.com"
  },
  "license": "MIT",
  "repository": "github:hanstanawi/node-ts-starter-template",
  "author": "Hans Tanawi <hans.tanawi@outlook.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "dev": "tsx watch src",
    "docs": "typedoc src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:types": "tsc --noEmit",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.6",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typedoc": "^0.27.9",
    "typescript": "^5.7.3"
  }
}
