{
  "name": "node-ts-starter-template",
  "version": "1.0.0",
  "description": "Node.js + TypeScript starter template",
  "engines": {
    "node": ">= 18.x"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "jest",
    "github-actions"
  ],
  "homepage": "https://github.com/hanstanawi/node-ts-starter-template",
  "bugs": {
    "url": "https://github.com/hanstanawi/node-ts-starter-template/issues",
    "email": "hans.tanawi@outlook.com"
  },
  "license": "MIT",
  "repository": "github:hanstanawi/node-ts-starter-template",
  "author": "Hans Tanawi <hans.tanawi@outlook.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "dev": "tsx watch src",
    "docs": "typedoc src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:types": "tsc --noEmit",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.5.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3"
  }
}
